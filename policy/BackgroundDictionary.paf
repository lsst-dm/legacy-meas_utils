#<?cfg paf dictionary ?>
#
# This file should be moved back to meas/utils when #1035 is resolved
#
target: backgroundPolicy

definitions: {
    binsize: {
        type: "int"
        description: "how large a region of the sky should be used for each 
        			  background point"
        maxOccurs: 1
        default: 256
        allowed: {
            min: 10
        }
    }
    algorithm: {
        type: "string"      
        description: "how to interpolate the background values. This maps to an 
        			  enum; see afw::math::Background"
        maxOccurs: 1
        default:   "NATURAL_SPLINE"

        allowed: {
            value: "NATURAL_SPLINE"
        }
        allowed: {
            value: "NONE"
            description: "No background estimation is to be attempted"
        }
    }
}
