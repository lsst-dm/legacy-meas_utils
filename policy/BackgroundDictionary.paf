#<?cfg paf dictionary ?>
#
# This file should be moved back to meas/utils when #1035 is resolved
#
target: backgroundPolicy

definitions: {
    statisticsproperty: {
        type: "string"
	description: "type of statistic to use for grid points"
	maxOccurs: 1
	default: "MEANCLIP"
	allowed: {
	    value: "MEANCLIP"
	}
	allowed: {
	    value: "MEAN"
	}
	allowed: {
	    value: "MEDIAN"
	}
    }
    undersamplestyle: {
        type: "string"
	description: "behaviour if there are too few points in grid for
	 	      requested interpolation style"
        maxOccurs: 1
	default: "THROW_EXCEPTION"
	allowed: {
	    value: "THROW_EXCEPTION"
	}
	allowed: {
	    value: "REDUCE_INTERP_ORDER"
	    description: "use an interpolation style with a lower order."
	}
	allowed: {
	    value: "INCREASE_NXNYSAMPLE"
	    description: "Increase the number of samples used to make the interpolation grid."
	}
    }
    binsize: {
        type: "int"
        description: "how large a region of the sky should be used for each 
        			  background point"
        maxOccurs: 1
        default: 256
        allowed: {
            min: 10
        }
    }
    algorithm: {
        type: "string"      
        description: "how to interpolate the background values. This maps to an 
        			  enum; see afw::math::Background"
        maxOccurs: 1
        default:   "NATURAL_SPLINE"

        allowed: {
            value: "NATURAL_SPLINE"
        }
        allowed: {
            value: "AKIMA_SPLINE"
        }
        allowed: {
            value: "NONE"
            description: "No background estimation is to be attempted"
        }
    }
}
