#<?cfg paf dictionary ?>

target: crRejectionPolicy

definitions: {
    gain: {
        type: "double"
        description: "Gain of detector; electrons/DN"
        maxOccurs: 1
        #default: 1.0                    # no default
    }

    minSigma: {
        type: "double"
        description: "CRs must be > this many sky-sig above sky"
        maxOccurs: 1
        default: 6.0
    }
    
    min_e: {
        type: "double"
        description: "CRs must have > this many electrons in initial detection"
        maxOccurs: 1
        default: 150.0
    }

    cond3_fac: {
        type: "double"
        description: "used in condition 3 for CR; see CR.cc code"
        maxOccurs: 1
        default: 2.5
    }

    cond3_fac2: {
        type: "double"
        description: "used in condition 3 for CR; see CR.cc code"
        maxOccurs: 1
        default: 0.6
    }

    niteration: {
        type: "int"
        description: "number of times to look for contaminated pixels near known CR pixels"
        maxOccurs: 1
        default: 3
    }
}
